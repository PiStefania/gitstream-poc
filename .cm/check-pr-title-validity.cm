# -*- mode: yaml -*-

manifest:
  version: 1.0

automations:
  jira_ticket:
    if:
      - {{ not is.valid_title }}
    run:
      - action: add-label@v1
        args:
          label: "invalid-pr-title"
          color: 'F6443B'

is:
  valid_title: {{ pr.title | includes(regex=r/^\[?\w{3,4}-\d{1,6}\]?(\s|-|_).{20,}$/)) }}
